<div class="modal-header">    <button type="button" class="close" data-dismiss="modal">&times;</button></div><div class="modal-body">        {if $item_i18n->getPicture()->isLoaded()}        <input type="text" class="form-control SitePictureI18n Input" name="name" placeholder="{__('Enter name')}{if $form->name->getOption('required')}*{/if}" value="{$item_i18n->getPicture()->get('name')}"/><br/>        <input type="text" class="form-control SitePictureI18n Input" name="title" placeholder="{__('Enter title')}{if $form->title->getOption('required')}*{/if}" value="{$item_i18n->get('title')}"/><br/>        <input type="text" class="form-control SitePictureI18n Input" name="link" placeholder="{__('Enter link')}{if $form->link->getOption('required')}*{/if}" value="{$item_i18n->get('link')}"/><br/>        {html_options class="form-control SitePictureI18n Select" name="target" options=$form->target->getChoices() selected=$item_i18n->get('target')}<br/>        <input type="text" class="form-control SitePictureI18n Input" name="description" placeholder="{__('Enter description')}{if $form->description->getOption('required')}*{/if}" value="{$item_i18n->get('description')}"/><br/>        <textarea class="form-control SitePictureI18n Input" name="content" placeholder="{__('Enter content')}{if $form->content->getOption('required')}*{/if}" value="">{$item_i18n->get('content')}</textarea>        <div style="text-align: center;padding-top: 10px;">            <button id="Save" class="btn btn-success">{__('Save')}</button>        </div>    <script type="text/javascript">                       $('#Save').click(function(){                                         var  params= {   SitePictureI18n: {                                        picture_id : '{$item_i18n->get('picture_id')}',                                   lang : '{$item_i18n->get('lang')}',                                   token :'{$form->getCSRFToken()}'                                } };          $(".SitePictureI18n.Input").each(function() { params.SitePictureI18n[$(this).attr('name')]=$(this).val(); });                  $(".SitePictureI18n.Select option:selected").each(function() { params.SitePictureI18n[$(this).parent().attr('name')]=$(this).val(); });            return $.ajax2({ data : params,                                                    url: "{url_to('site_gallery_ajax',['action'=>'SavePictureI18n'])}",                           success : function (resp)                                {                                     if (resp.action != 'SavePictureI18n') return ;                                     $("#SitePictureViewDialog").modal('hide');                                     $("#title-ctn").html(resp.title);                                }                        });         });        </script>         {else}       {__('Picture is invalid.')}            {/if}  </div>